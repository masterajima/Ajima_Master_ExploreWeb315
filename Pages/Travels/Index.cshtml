@page
@model AjimaExploreTravel.Pages.Travels.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Travel[0].TravelTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Travel[0].BookDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Travel[0].TouristAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Travel[0].HotelPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Travel[0].HotelAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Travel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TravelTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TouristAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelAddress)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
